{
    "name": "moneybag/woocommerce-payment-gateway",
    "description": "Official Moneybag Payment Gateway for WooCommerce",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Moneybag",
            "email": "support@moneybag.com.bd"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Moneybag\\WooCommerce\\": "includes/",
            "Moneybag\\SDK\\": "includes/moneybag-sdk/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moneybag\\WooCommerce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint": "phpcs --standard=WordPress --extensions=php .",
        "fix": "phpcbf --standard=WordPress --extensions=php ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}