{
  "steps": [
    {
      "id": 1,
      "title": "Business Information",
      "fields": ["legalIdentity", "businessCategory", "monthlyVolume", "maxAmount", "currencyType", "serviceTypes"]
    },
    {
      "id": 2,
      "title": "Online Presence",
      "fields": ["merchantName", "tradingName", "domainName"]
    },
    {
      "id": 3,
      "title": "Point of Contact",
      "fields": ["contactName", "designation", "email", "mobile", "phone"]
    },
    {
      "id": 4,
      "title": "Documents",
      "fields": ["logo", "tradeLicense", "idDocument", "tinCertificate"]
    }
  ],
  "fields": {
    "legalIdentity": {
      "type": "select",
      "label": "Legal Identity",
      "required": true,
      "options": [
        {"value": "individual", "label": "Individual"},
        {"value": "proprietorship", "label": "Proprietorship"},
        {"value": "partnership", "label": "Partnership"},
        {"value": "limited_company", "label": "Limited Company"},
        {"value": "others", "label": "Others"}
      ]
    },
    "businessCategory": {
      "type": "select",
      "label": "Business Category",
      "required": true,
      "options": [
        {"value": "ecommerce", "label": "E-commerce"},
        {"value": "retail", "label": "Retail"},
        {"value": "restaurant", "label": "Restaurant"},
        {"value": "service", "label": "Service Provider"},
        {"value": "education", "label": "Education"},
        {"value": "healthcare", "label": "Healthcare"},
        {"value": "others", "label": "Others"}
      ]
    },
    "monthlyVolume": {
      "type": "select",
      "label": "Monthly Transaction Volume",
      "required": true,
      "options": [
        {"value": "0-50000", "label": "0 - 50,000 BDT"},
        {"value": "50000-200000", "label": "50,000 - 2,00,000 BDT"},
        {"value": "200000-500000", "label": "2,00,000 - 5,00,000 BDT"},
        {"value": "500000-1000000", "label": "5,00,000 - 10,00,000 BDT"},
        {"value": "1000000+", "label": "10,00,000+ BDT"}
      ]
    },
    "currencyType": {
      "type": "select",
      "label": "Currency Type",
      "required": true,
      "options": [
        {"value": "BDT", "label": "Bangladeshi Taka (BDT)"},
        {"value": "USD", "label": "US Dollar (USD)"}
      ]
    },
    "serviceTypes": {
      "type": "checkbox",
      "label": "Service Types",
      "required": true,
      "options": [
        {"value": "online_payment", "label": "Online Payment"},
        {"value": "pos", "label": "Point of Sale (POS)"},
        {"value": "mobile_banking", "label": "Mobile Banking"},
        {"value": "recurring", "label": "Recurring Payments"}
      ]
    }
  }
}